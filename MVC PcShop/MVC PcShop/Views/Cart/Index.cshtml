
@{
    Layout = null;
}

@using MVC_PcShop.Models

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
</head>
<body>

    <h3>Cart Page</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Option</th>
            <th>Type</th>
            <th>Name</th>
            <th>Manufacturer</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (Item item in (List<Item>)Session["cart"])
        {
    <tr>
        <td><a href="@Url.Action("Remove", "Cart", new { id = item.Pccomponent.ID })">Remove</a></td>
        <td>@item.Pccomponent.ID</td>
        <td>@item.Pccomponent.Type</td>
        <td>@item.Pccomponent.Name </td>
        <td>@item.Pccomponent.Manufacturer </td>
        <td>@item.Pccomponent.Price</td>
        <td>@item.Quantity</td>
        <td>@(item.Pccomponent.Price * item.Quantity)</td>
    </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @{
                    List<Item> cart = (List<Item>)Session["cart"];
                    var total = cart.Sum(item => item.Pccomponent.Price * item.Quantity);
                }
                @total
            </td>
        </tr>
    </table>
    <br>
    <a href="@Url.Action("Index", "PcComponent")">Continue Shopping</a>

</body>
</html>
